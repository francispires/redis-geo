{
    "family": "${ECS_TASK}",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "image": "770676894615.dkr.ecr.us-east-2.amazonaws.com/redis-geo:latest",
            "name": "${IMAGE_NAME}",
            "cpu": 128,
            "memory": 256,
            "essential": true,
            "links": ["${IMAGE_NAME}-redis"],
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "VIRTUAL_HOST",
                    "value": "${AWS_VIRTUAL_HOST}"
                },
                {
                    "name": "REDIS_HOST",
                    "value": "${IMAGE_NAME}-redis"
                },
                {
                    "name": "LETSENCRYPT_HOST",
                    "value": "${LETSENCRYPT_HOST}"
                },
                {
                    "name": "LETSENCRYPT_EMAIL",
                    "value": "${LETSENCRYPT_EMAIL}"
                }
            ]
        },
        {
            "name": "${IMAGE_NAME}-redis",
            "image": "redis:3.2",
            "cpu": 128,
            "memory": 128,
            "essential": true
        }
    ]
}
